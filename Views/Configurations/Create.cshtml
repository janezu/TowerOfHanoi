@model TowerOfHanoi.Models.ConfigurationCreation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Configuration</h4>
<hr />
<div class="justify-content-center">

    <div class=" container-fluid justify-content-center">
              
        <form asp-action="Create">
            <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConfigurationID" class="control-label"></label>
                <input asp-for="ConfigurationID" placeholder="Example: 1337" class="form-control" />
                <span asp-validation-for="ConfigurationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="start" class="control-label">Starting tower</label>
                <input asp-for="start" placeholder="Example: 1" class="form-control" />
                <span asp-validation-for="start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="end" class="control-label">End tower</label>
                <input asp-for="end" placeholder="Example: 2" class="form-control" />
                <span asp-validation-for="end" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="navodilo" class="control-label">Instruction</label>
                <input asp-for="navodilo" placeholder="Example: From tower nr. 1 to tower nr. 2" class="form-control" />
                <span asp-validation-for="navodilo"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="conPic" class="control-label">Picture source</label>
                <input asp-for="conPic" placeholder="Example: Images/5.png" class="form-control" />
                <span asp-validation-for="conPic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label">For variation</label>
                <select asp-for="VariationID" class ="form-control" asp-items="ViewBag.VariationID"></select>
            </div></div>
            <div class="form-group">

                <div class="col-md-4">
                    <hr />
                    <h4>Below section is optional</h4>
                    <div class="form-group">
                        <label asp-for="o1" class="control-label">Optimal number of moves for 1 disc</label>
                        <input asp-for="o1" placeholder="Example: 1" class="form-control" />
                        <span asp-validation-for="o1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="o2" class="control-label">Optimal number of moves for 2 discs</label>
                        <input asp-for="o2" placeholder="Example: 2" class="form-control" />
                        <span asp-validation-for="o2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="o3" class="control-label">Optimal number of moves for 3 discs</label>
                        <input asp-for="o3" placeholder="Example: 3" class="form-control" />
                        <span asp-validation-for="o3" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="o4" class="control-label">Optimal number of moves for 4 discs</label>
                        <input asp-for="o4" placeholder="Example: 4" class="form-control" />
                        <span asp-validation-for="o4" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="o5" class="control-label">Optimal number of moves for 5 discs</label>
                        <input asp-for="o5" placeholder="Example: 5" class="form-control" />
                        <span asp-validation-for="o5" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="o6" class="control-label">Optimal number of moves for 6 discs</label>
                        <input asp-for="o6" placeholder="Example: 6" class="form-control" />
                        <span asp-validation-for="o6" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="o7" class="control-label">Optimal number of moves for 7 discs</label>
                        <input asp-for="o7" placeholder="Example: 7" class="form-control" />
                        <span asp-validation-for="o7" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="o8" class="control-label">Optimal number of moves for 8 discs</label>
                        <input asp-for="o8" placeholder="Example: 8" class="form-control" />
                        <span asp-validation-for="o8" class="text-danger"></span>
                    </div>

                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
</form>
    </div>
</div>

<div>
    <a asp-controller="variations" asp-action="index">Back to List</a>
</div>

