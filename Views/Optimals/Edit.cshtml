@model TowerOfHanoi.Models.Optimal

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Optimal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OptimalID" />
            <div class="form-group">
                <label asp-for="DiskNr" class="control-label"></label>
                <input asp-for="DiskNr" class="form-control" />
                <span asp-validation-for="DiskNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovesO" class="control-label"></label>
                <input asp-for="MovesO" class="form-control" />
                <span asp-validation-for="MovesO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfigurationID" class="control-label"></label>
                <select asp-for="ConfigurationID" class="form-control" asp-items="ViewBag.ConfigurationID"></select>
                <span asp-validation-for="ConfigurationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
